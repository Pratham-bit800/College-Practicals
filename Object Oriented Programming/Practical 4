INPUT: 

import java.util.Scanner;

class ATM {
    private double balance;

    // Constructor with initial balance
    public ATM(double initialBalance) {
        this.balance = initialBalance;
    }

    // Check Balance
    public void checkBalance() {
        System.out.println("Your current balance is: ₹" + balance);
    }

    // Deposit Money
    public void deposit(double amount) {
        if (amount <= 0) {
            throw new IllegalArgumentException("Deposit amount must be greater than 0.");
        }
        balance += amount;
        System.out.println("Successfully deposited ₹" + amount);
    }

    // Withdraw Money
    public void withdraw(double amount) {
        if (amount <= 0) {
            throw new IllegalArgumentException("Withdrawal amount must be greater than 0.");
        }
        if (amount > balance) {
            throw new ArithmeticException("Insufficient funds. Withdrawal denied.");
        }
        balance -= amount;
        System.out.println("Successfully withdrew ₹" + amount);
    }
}

public class ATMSystem {
    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);
        ATM atm = new ATM(5000.0); // Initial balance

        boolean running = true;
        System.out.println("=== Welcome to ATM Machine ===");

        while (running) {
            try {
                // Menu
                System.out.println("\n--- MENU ---");
                System.out.println("1. Check Balance");
                System.out.println("2. Deposit Money");
                System.out.println("3. Withdraw Money");
                System.out.println("4. Exit");
                System.out.print("Enter your choice: ");
                int choice = sc.nextInt();

                switch (choice) {
                    case 1:
                        atm.checkBalance();
                        break;
                    case 2:
                        System.out.print("Enter deposit amount: ");
                        double depositAmount = sc.nextDouble();
                        atm.deposit(depositAmount);
                        break;
                    case 3:
                        System.out.print("Enter withdrawal amount: ");
                        double withdrawAmount = sc.nextDouble();
                        atm.withdraw(withdrawAmount);
                        break;
                    case 4:
                        running = false;
                        System.out.println("Thank you for using the ATM. Goodbye!");
                        break;
                    default:
                        System.out.println("Invalid choice! Please select between 1 and 4.");
                }
            } catch (IllegalArgumentException e) {
                System.out.println("Error: " + e.getMessage());
            } catch (ArithmeticException e) {
                System.out.println("Error: " + e.getMessage());
            } catch (Exception e) {
                System.out.println("Unexpected error occurred: " + e);
                sc.nextLine(); // clear invalid input
            } finally {
                if (running) {
                    System.out.println("Transaction completed. Returning to main menu...");
                }
            }
        }

        sc.close();
    }
}

